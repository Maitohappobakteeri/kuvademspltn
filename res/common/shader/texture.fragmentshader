varying highp vec2 uvVec;

uniform sampler2D tex;
uniform highp vec4 shadeColor;
uniform highp float alpha;

void main()
{
    highp vec4 texCol = texture2D(tex, uvVec);
    gl_FragColor  = vec4(shadeColor.rgb, 1.0) * shadeColor.a + texCol * (1.0-shadeColor.a);
    gl_FragColor .a = texCol.a * alpha;
}
